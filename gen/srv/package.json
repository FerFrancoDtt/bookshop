{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "https://github.com/FerFrancoDtt/bookshop.git",
  "license": "Apache License",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/hana-client": "^2.10.13",
    "express": "^4",
    "hdb": "^0.18.3"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "npx cds run"
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "sql",
        "credentials": {
          "database": "database/bookshop.db"
        }
      }
    }
  },
  "engines": {
    "node": ">=12.18"
  }
}
